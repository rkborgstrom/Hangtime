<% include partials/header %>

  <section class="form-bg d-flex justify-content-center">
    <form class="needs-validation" novalidate action="/post" method="POST">

      <div class="form-row">

        <div class="col-md-12 mb-3">
          <label for="picture">Picture URL</label>
          <input type="text" class="form-control" id="picture" placeholder="Insert image URL here" name="picture" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>

        <div class="custom-file">
          <input type="file" class="custom-file-input" id="customFile">
          <label class="custom-file-label" for="customFile">Choose file</label>
        </div>

        <div class="col-md-6 mb-3">
          <label for="location">Mountain</label>
          <input type="text" class="form-control" id="location" placeholder="e.g. Park City Mountain" name="location" required>
        </div>

        <div class="col-md-6 mb-3">
          <label for="username">Username</label>
          <input type="text" class="form-control" id="username" placeholder="Username" name="username" required>
        </div>
      </div>
      </div>
      <div class="form-row">
        <div class="col-md-6 mb-3">
          <label for="validationCustom03">Snow Report</label>
          <input type="text" class="form-control" id="snowreport" name="snowreport" placeholder="e.g. 15 inches" required>
        </div>
        <div class="col-md-3 mb-3">
          <label for="date">Date</label>
          <input type="date" class="form-control" id="date" name="date" placeholder="Date" required>
          <div class="invalid-feedback">
            Please provide a valid state.
          </div>
        </div>
        <div class="col-md-3 mb-3">
          <label for="time">Time</label>
          <input type="time" class="form-control" id="time" name="time" required>
          <div class="invalid-feedback">
            Please provide a valid zip.
          </div>

        </div>
        <div class="input-group col-md-6 mb-3">
          <label for="conditions">Conditions: &nbsp </label>
          <select class="custom-select" name="conditions" id="conditions">
            <option selected>Choose...</option>
            <option value="Powder">Powder</option>
            <option value="Slushy">Slushy</option>
            <option value="Ice">Ice</option>
            <option value="Groomers">Groomers</option>
          </select>
          <div class="input-group-append">
            <label class="input-group-text" for="conditions">Options</label>
          </div>
        </div>

      </div>
      <label for="textbox">Tell us about your day:</label>
      <textarea class="input-group col-md-4 mb-3" id="textbox" name="textbox">
      </textarea>

      <button class="btn btn-primary" type="submit">Send it</button>
  </section>
  </form>
  </section>


  <% include partials/footer %>